@model CommentViewModel

@{ 

}

<div id="post-box">
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" asp-controller="Home" asp-action="Comment" class="comment-box">
            <input asp-for="PostId" type="hidden" />
            <input asp-for="MainCommentId" type="hidden" />
            <input asp-for="UserName" type="hidden" value="@User.Identity.Name" />
            <input asp-for="Message" placeholder="Leave a Comment.." />
            <button type="submit">Submit</button>

        </form>
    }
    </div>